            "source": [
                "import numpy as np\n",
                "from sklearn.metrics import accuracy_score",
            ],
        },
        {
            "cell_type": "code",
            "execution_count": null,
            "metadata": {},
            "outputs": [],
            "source": [
                "class KNeighborsClassifier:\n",
                "    def __init__(self, k=5):\n",
                "        self.k = k\n",
                "        self.features = None\n",
                "        self.labels = None\n",
                "\n",
                "    def fit(self, X, y):\n",
                "        self.features = X\n",
                "        self.labels = y\n",
                "\n",
                "    def predict(self, X):\n",
                "        N = X.shape[0]\n",
                "        y_pred = np.empty(N)\n",
                "\n",
                "        for i in range(N):\n",
                "            distance = np.sum(np.power(self.features - X[i], 2), axis=1)\n",
                "            idx = np.argsort(distance)[:self.k]\n",
                "            k_nearest_neighbors = self.labels[idx].astype('int')\n",
                "            counts = np.bincount(k_nearest_neighbors)\n",
                "            y_pred[i] = counts.argmax()\n",
                "        return y_pred\n",
                "\n",
                "    def score(self, X, y):\n",
                "        return accuracy_score(y, self.predict(X))\n",
                "\n",
                "    def get_params(self, deep):\n",
                "        return { 'k': self.k }",
            ],
        },
    ],
}
